<?import javafx.geometry.*?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<VBox fx:id="mainPane" xmlns="http://javafx.com/javafx/8"
      xmlns:fx="http://javafx.com/fxml/1" HBox.hgrow="ALWAYS" style="-fx-background-color:#f5f5f5">
    <children>
        <HBox prefHeight="100.0" prefWidth="200.0" fx:id="top">
            <children>
                <Label text="Phone:">
                    <font>
                        <Font size="29.0"/>
                    </font>
                    <HBox.margin>
                        <Insets left="5.0" right="5.0" top="15.0"/>
                    </HBox.margin>
                </Label>
                <TextField prefHeight="50.0" HBox.hgrow="ALWAYS">
                    <padding>
                        <Insets top="10.0"/>
                    </padding>
                    <HBox.margin>
                        <Insets right="5.0" top="10.0"/>
                    </HBox.margin>
                </TextField>
            </children>
        </HBox>
        <HBox prefHeight="100.0" prefWidth="200.0" fx:id="bottom">
            <children>
                <Label text="Email:">
                    <font>
                        <Font size="29.0"/>
                    </font>
                    <HBox.margin>
                        <Insets left="5.0" right="5.0" top="15.0"/>
                    </HBox.margin>
                </Label>
                <TextField alignment="CENTER" nodeOrientation="LEFT_TO_RIGHT" prefHeight="50.0" HBox.hgrow="ALWAYS">
                    <HBox.margin>
                        <Insets right="5.0" top="10.0"/>
                    </HBox.margin>
                </TextField>
            </children>
        </HBox>
    </children>
</VBox>
