<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">


	<bean id="workbench" class="it.pkg.workbench.Workbench">
		<property name="perspectives">
			<list>
				<ref bean="perspectiveOne" />
			</list>
		</property>
	</bean>

	<bean id="perspectiveOne" class="it.pkg.perspectives.PerspectiveOne">
		<property name="name" value="perspectiveOne" />
		<property name="id" value="id01" />
		<property name="active" value="true" />
		<property name="subcomponents">
			<list>
				<ref bean="componentLeft" />
				<ref bean="componentRight" />
				<ref bean="statefulCallback" />
				<ref bean="statelessCallback" />
			</list>
		</property>
	</bean>


	<bean id="componentLeft" class=" it.pkg.components.ComponentLeft">
		<property name="name" value="componentLeft" />
		<property name="active" value="true" />
		<property name="id" value="id001" />
		<property name="executionTarget" value="Pleft" />
	</bean>
	<bean id="componentRight" class=" it.pkg.components.ComponentRight">
		<property name="name" value="componentRight" />
		<property name="active" value="true" />
		<property name="id" value="id002" />
		<property name="executionTarget" value="PMain" />
	</bean>

	<bean id="statefulCallback" class=" it.pkg.callbacks.StatefulCallback"
		scope="prototype">
		<property name="name" value="statefulCallback" />
		<property name="active" value="true" />
		<property name="id" value="id003" />
	</bean>
	<bean id="statelessCallback" class=" it.pkg.callbacks.StatelessCallback">
		<property name="name" value="statelessCallback" />
		<property name="active" value="true" />
		<property name="id" value="id004" />
	</bean>
</beans>